{
  "name": "cs-test-automation-framework",
  "version": "3.0.0",
  "description": "CS Test Automation Framework - Lightning-fast, configurable, self-healing test automation",
  "main": "dist/index.js",
  "scripts": {
    "test": "node test-runner.js",
    "test:direct": "ts-node --transpile-only src/index.ts",
    "test:akhan": "npm run test -- --project=akhan",
    "test:akhan:dev": "npm run test -- --project=akhan --env=dev",
    "test:akhan:staging": "npm run test -- --project=akhan --env=staging",
    "test:akhan:prod": "npm run test -- --project=akhan --env=prod",
    "test:akhan:fast": "cross-env TS_NODE_TRANSPILE_ONLY=true LAZY_LOADING=true SELECTIVE_STEP_LOADING=true timeout 15 npm run test -- --project=akhan",
    "test:orangehrm": "npm run test -- --project=orangehrm",
    "test:orangehrm:demo": "npm run test -- --project=orangehrm --env=demo",
    "test:orangehrm:fast": "cross-env TS_NODE_TRANSPILE_ONLY=true LAZY_LOADING=true SELECTIVE_STEP_LOADING=true npm run test -- --project=orangehrm",
    "test:parallel": "npm run test -- --parallel=true --workers=8",
    "test:debug": "npm run test -- --debug=true --headless=false",
    "test:smoke": "npm run test -- --tags=@smoke",
    "test:regression": "npm run test -- --tags=@regression",
    "build": "tsc",
    "clean": "rm -rf dist node_modules package-lock.json",
    "postinstall": "playwright install"
  },
  "keywords": [
    "test",
    "automation",
    "playwright",
    "cucumber",
    "bdd",
    "self-healing",
    "ai"
  ],
  "author": "CS Team",
  "license": "MIT",
  "dependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/gherkin": "^27.0.0",
    "@cucumber/messages": "^24.0.0",
    "@playwright/test": "^1.55.0",
    "@types/xml2js": "^0.4.14",
    "csv-parse": "^5.5.2",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "https-proxy-agent": "^7.0.2",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "minimist": "^1.2.8",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.33.1",
    "socks-proxy-agent": "^8.0.2",
    "ws": "^8.14.2",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/archiver": "^6.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "ajv": "^8.17.1",
    "archiver": "^7.0.1",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
