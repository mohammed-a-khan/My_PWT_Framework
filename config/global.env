# CS Test Automation Framework - Global Configuration
# ZERO HARDCODING - Everything is configurable

# Framework Core Settings
FRAMEWORK_NAME=CS Test Automation
FRAMEWORK_VERSION=3.0.0
FRAMEWORK_MODE=optimized

# Execution Defaults (when nothing specified)
DEFAULT_PROJECT=common
DEFAULT_ENVIRONMENT=dev
DEFAULT_BROWSER=chrome
DEFAULT_HEADLESS=false
DEFAULT_PARALLEL=false
DEFAULT_WORKERS=4
DEFAULT_TIMEOUT=30000
DEFAULT_RETRY_COUNT=2

# Feature Execution Defaults
DEFAULT_FEATURES=test/*/features/*.feature
DEFAULT_TAGS=not @skip and not @manual
DEFAULT_STRICT_MODE=false
DEFAULT_DRY_RUN=false
DEFAULT_FAIL_FAST=false

# Performance Optimization (Lightning-fast startup)
LAZY_LOADING=true
SELECTIVE_STEP_LOADING=true
TS_NODE_TRANSPILE_ONLY=true
CACHE_COMPILED_TS=true
PARALLEL_INITIALIZATION=true
PRELOAD_COMMON_MODULES=false

# Browser Instance Strategy
BROWSER_INSTANCE_STRATEGY=new-per-scenario
BROWSER_POOL_ENABLED=false
BROWSER_POOL_SIZE=4
BROWSER_POOL_REUSE_STRATEGY=round-robin
BROWSER_HEALTH_CHECK_ENABLED=true
BROWSER_AUTO_RESTART_ON_CRASH=true
BROWSER_MAX_RESTART_ATTEMPTS=3
BROWSER_RESTART_MAINTAIN_STATE=true
BROWSER_SWITCH_MAINTAIN_STATE=true

# Browser Configuration
BROWSER_LIST=chrome;firefox;webkit;edge
BROWSER_LAUNCH_TIMEOUT=30000
BROWSER_CONTEXT_TIMEOUT=30000
BROWSER_ACTION_TIMEOUT=10000
BROWSER_NAVIGATION_TIMEOUT=30000
BROWSER_AUTO_WAIT_TIMEOUT=5000
BROWSER_DOWNLOAD_PATH=./downloads
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080
BROWSER_MAXIMIZED=false
BROWSER_DEVTOOLS=false
BROWSER_SLOWMO=0
BROWSER_VIDEO=off
BROWSER_TRACE=off
BROWSER_SCREENSHOT=on
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_ON_SUCCESS=false
BROWSER_HAR_ENABLED=false
BROWSER_CAPTURE_CONSOLE=false
BROWSER_IGNORE_HTTPS_ERRORS=true
BROWSER_LOCALE=en-US
BROWSER_TIMEZONE=America/New_York
BROWSER_COLOR_SCHEME=light
BROWSER_REDUCED_MOTION=no-preference
BROWSER_FORCED_COLORS=none

# Element Interaction
ELEMENT_RETRY_COUNT=3
ELEMENT_CLEAR_BEFORE_TYPE=true
SPINNER_SELECTORS=.spinner;.loading;.loader;#loading

# Self-Healing & AI
SELF_HEALING_ENABLED=true
SELF_HEALING_MAX_ATTEMPTS=3
SELF_HEALING_CACHE_TTL=300000
AI_ENABLED=false
AI_CONFIDENCE_THRESHOLD=0.7

# Step Definition Loading
STEP_DEFINITIONS_PATH=test/common/steps;test/{project}/steps
STEP_LOADING_STRATEGY=on-demand
CACHE_COMPILED_STEPS=true
STEP_CACHE_TTL=3600000
PARALLEL_STEP_COMPILATION=true
COMPILATION_WORKERS=4

# Reporting Configuration
REPORT_ENABLED=true
REPORT_FORMATS=html;json;junit
REPORT_OUTPUT_DIR=./reports
REPORT_INCLUDE_SCREENSHOTS=true
REPORT_INCLUDE_VIDEOS=false
REPORT_INCLUDE_TRACES=false
REPORT_OPEN_AFTER_RUN=true
REPORT_TIMESTAMP_FORMAT=YYYY-MM-DD_HH-mm-ss
SCREENSHOT_ON_FAILURE=true

# Reports Configuration
REPORTS_BASE_DIR=./reports
REPORTS_CREATE_TIMESTAMP_FOLDER=true
REPORTS_ZIP_RESULTS=false
REPORTS_KEEP_UNZIPPED=true

# Capture Modes Configuration
VIDEO_CAPTURE_MODE=on-failure
SCREENSHOT_CAPTURE_MODE=on-failure
TRACE_CAPTURE_MODE=on-failure
HAR_CAPTURE_MODE=always
CONSOLE_LOG_CAPTURE=true

# Artifacts Cleanup Configuration
ARTIFACTS_CLEANUP_PASS=true
ARTIFACTS_CLEANUP_FAIL=false

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/{project}/{environment}_{timestamp}.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORS=true

# API Configuration
API_BASE_URL=https://api.{environment}.{project}.com
API_TIMEOUT=30000
API_RETRY_COUNT=3
API_RETRY_DELAY=1000
API_LOG_REQUESTS=true
API_LOG_RESPONSES=true

# Database Configuration
DB_ENABLED=false
DB_TYPE=mysql
DB_HOST={project}-{environment}-db.cloud.com
DB_PORT=3306
DB_NAME={project}_{environment}
DB_USERNAME={project}_user
DB_PASSWORD=ENCRYPTED:x7f8d9s8f7d9f8
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
DB_QUERY_TIMEOUT=10000
DB_AUTO_ROLLBACK=false

# Azure DevOps Integration
ADO_ENABLED=false
ADO_ORGANIZATION={organization}
ADO_PROJECT={project}
ADO_PAT=ENCRYPTED:a8f7d9s8f7d9f8
ADO_UPDATE_TEST_CASES=true
ADO_CREATE_BUGS_ON_FAILURE=false
ADO_API_TIMEOUT=30000
ADO_API_RETRY_COUNT=3
ADO_API_RETRY_DELAY=2000

# Proxy Configuration
ADO_PROXY_ENABLED=false
ADO_PROXY_PROTOCOL=http
ADO_PROXY_HOST=proxy.company.com
ADO_PROXY_PORT=8080
ADO_PROXY_AUTH_REQUIRED=false
ADO_PROXY_USERNAME=
ADO_PROXY_PASSWORD=
ADO_PROXY_BYPASS_LIST=localhost;127.0.0.1;*.local

# Browser Proxy Configuration (separate from ADO)
BROWSER_PROXY_ENABLED=false
BROWSER_PROXY_SERVER=http://proxy.company.com:8080
BROWSER_PROXY_USERNAME=
BROWSER_PROXY_PASSWORD=
BROWSER_PROXY_BYPASS=localhost,127.0.0.1

# Data Provider Configuration
DATA_PROVIDER_ENABLED=true
DATA_PROVIDER_SOURCES=excel;csv;json;api;database

# Dashboard Configuration
DASHBOARD_ENABLED=false
DASHBOARD_WS_PORT=8080
DASHBOARD_AUTO_OPEN=false

# Evidence Collection
AUTO_SAVE_EVIDENCE=true
VIDEO_TRIM_ON_FAILURE=true
VIDEO_TRIM_DURATION=10

# Notification Settings
NOTIFICATION_ENABLED=false
NOTIFICATION_ON_SUCCESS=false
NOTIFICATION_ON_FAILURE=true
NOTIFICATION_CHANNELS=console

# Debug Settings
DEBUG_MODE=false
DEBUG_PAUSE_ON_FAILURE=false
DEBUG_SCREENSHOT_ON_FAILURE=true
DEBUG_KEEP_BROWSER_OPEN=false
# Enable screenshot on step failure
SCREENSHOT_ON_STEP_FAILURE=true

# Additional Configuration from Backup Framework
# PDF Report Generation
GENERATE_PDF_REPORT=false
PDF_REPORT_TEMPLATE=default

# Excel Report Generation
GENERATE_EXCEL_REPORT=false
EXCEL_REPORT_INCLUDE_CHARTS=true

# Report Theme Configuration
REPORT_THEME_PRIMARY_COLOR=#93186C
REPORT_THEME_SECONDARY_COLOR=#FFFFFF

# Browser Management Strategy (from backup)
BROWSER_MANAGEMENT_STRATEGY=new-per-scenario

# Certificate Management
CERTIFICATE_PATH=./certificates

# Data Provider Cache Settings
DATA_PROVIDER_CACHE_ENABLED=true
DATA_PROVIDER_CACHE_TTL=3600000

# Element Cache Settings
ELEMENT_CACHE_TTL=60000

# Step Definition Configuration
STEP_DEFINITION_PATHS=./test/steps/**/*.ts,./src/steps/**/*.ts
STEP_RETRY_COUNT=3
STEP_RETRY_DELAY=1000

# Evidence Directory Configuration
EVIDENCE_DIR=./evidence
CONSOLE_LOG_DIR=./console-logs
DEBUG_OUTPUT_DIR=./debug-output

# ADO Evidence Upload Settings
ADO_UPLOAD_ATTACHMENTS=false
ADO_UPLOAD_SCREENSHOTS=false
ADO_UPLOAD_VIDEOS=false
ADO_UPLOAD_LOGS=false

# Report Content Settings
REPORT_INCLUDE_LOGS=true
REPORT_INCLUDE_TRACES=true

# Parallel Execution Settings
PARALLEL_EXECUTION=false
MAX_PARALLEL_WORKERS=4
